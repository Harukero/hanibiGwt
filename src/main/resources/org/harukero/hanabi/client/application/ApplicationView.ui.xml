				<m:MaterialLink iconType="ACCESS_ALARM" separator="true" ui:field="rules"/>
			</m:MaterialSideNav -->
        </m:MaterialHeader>
		<m:MaterialPanel ui:field="lifePointsAndInfos">
			<m:MaterialRow>
				<m:MaterialColumn grid="s12" textAlign="CENTER">
					<m:MaterialIcon iconType="FAVORITE" iconSize="MEDIUM" textColor="RED"/>
					<m:MaterialIcon iconType="FAVORITE" iconSize="MEDIUM" textColor="RED"/>
					<m:MaterialIcon iconType="FAVORITE" iconSize="MEDIUM" textColor="RED"/>
					<m:MaterialIcon iconType="INFO" iconSize="MEDIUM" textColor="BLUE"/>
					<m:MaterialIcon iconType="INFO" iconSize="MEDIUM" textColor="BLUE"/>
					<m:MaterialIcon iconType="INFO" iconSize="MEDIUM" textColor="BLUE"/>
					<m:MaterialIcon iconType="INFO" iconSize="MEDIUM" textColor="BLUE"/>
					<m:MaterialIcon iconType="INFO" iconSize="MEDIUM" textColor="BLUE"/>
					<m:MaterialIcon iconType="INFO" iconSize="MEDIUM" textColor="BLUE"/>
					<m:MaterialIcon iconType="INFO" iconSize="MEDIUM" textColor="BLUE"/>
					<m:MaterialIcon iconType="INFO" iconSize="MEDIUM" textColor="BLUE"/>
				</m:MaterialColumn>
			</m:MaterialRow>
		</m:MaterialPanel>
		
		<m:MaterialPanel ui:field="panelPlayers">
			<m:MaterialCollapsible grid="s12" textAlign="CENTER" ui:field="playerZones">
			</m:MaterialCollapsible>
			<m:MaterialPanel>
				<m:MaterialRow>
					<m:MaterialColumn grid="s2" ui:field="zone1">
						<m:MaterialCard backgroundColor="WHITE">
							<m:MaterialCardContent textColor="BLACK">
								<m:MaterialCardTitle textColor="BLACK" text="WHITE" iconType="FAVORITE" iconPosition="RIGHT" iconColor="RED"/>
								<m:MaterialLabel text="Zone for White Cards" />
							</m:MaterialCardContent>
							<m:MaterialCardAction>
								<m:MaterialBadge text="0" backgroundColor="BLACK" textColor="WHITE" circle="true" ui:field="numberOfCards_white" visible="false"/>
							</m:MaterialCardAction>
						</m:MaterialCard>
					</m:MaterialColumn>
					<m:MaterialColumn grid="s2" ui:field="zone2">
						<m:MaterialCard backgroundColor="RED">
							<m:MaterialCardContent textColor="WHITE">
								<m:MaterialCardTitle textColor="WHITE" text="RED" iconType="FAVORITE" iconPosition="RIGHT" iconColor="RED"/>
								<m:MaterialLabel text="Zone for Red cards" />
							</m:MaterialCardContent>
							<m:MaterialCardAction>
								<m:MaterialBadge text="0" backgroundColor="BLACK" textColor="WHITE" circle="true" ui:field="numberOfCards_red" visible="false"/>
							</m:MaterialCardAction>
						</m:MaterialCard>
					</m:MaterialColumn>
					<m:MaterialColumn grid="s2" ui:field="zone3">
						<m:MaterialCard backgroundColor="BLUE">
							<m:MaterialCardContent textColor="WHITE">
								<m:MaterialCardTitle textColor="WHITE" text="BLUE" iconType="FAVORITE" iconPosition="RIGHT" iconColor="RED"/>
								<m:MaterialLabel text="Zone for Blue cards" />
							</m:MaterialCardContent>
							<m:MaterialCardAction>
								<m:MaterialBadge text="0" backgroundColor="BLACK" textColor="WHITE" circle="true" ui:field="numberOfCards_blue" visible="false"/>					
							</m:MaterialCardAction>
						</m:MaterialCard>
					</m:MaterialColumn>
					<m:MaterialColumn grid="s2" ui:field="zone4">
						<m:MaterialCard backgroundColor="YELLOW">
							<m:MaterialCardContent textColor="BLACK">
								<m:MaterialCardTitle text="YELLOW" iconType="POLYMER" iconPosition="RIGHT"/>
								<m:MaterialLabel text="Zone for Yellow cards" />
							</m:MaterialCardContent>
							<m:MaterialCardAction>
								<m:MaterialBadge text="0" backgroundColor="BLACK" textColor="WHITE" circle="true" ui:field="numberOfCards_yellow" visible="false"/>					
							</m:MaterialCardAction>
						</m:MaterialCard>
					</m:MaterialColumn>
					<m:MaterialColumn grid="s2" ui:field="zone5">
						<m:MaterialCard backgroundColor="GREEN">
						<m:MaterialCardContent textColor="WHITE">
							<m:MaterialCardTitle text="GREEN" iconType="POLYMER" iconPosition="RIGHT"/>
							<m:MaterialLabel text="Zone for Green cards" />
						</m:MaterialCardContent>
							<m:MaterialCardAction>
								<m:MaterialBadge text="0" backgroundColor="BLACK" textColor="WHITE" circle="true" ui:field="numberOfCards_green" visible="false"/>					
							</m:MaterialCardAction>
						</m:MaterialCard>
					</m:MaterialColumn>
				</m:MaterialRow>
			</m:MaterialPanel>
	    </m:MaterialPanel>
		
	</m:MaterialPanel>
</ui:UiBinder>
