    <ui:with field="res" type="org.harukero.hanabi.client.resources.AppResources"/>
	
    <m:MaterialPanel backgroundColor="BLUE_GREY_DARKEN_4">
        <m:MaterialHeader>
			<m:MaterialNavBar activates="mySidenav" backgroundColor="PURPLE_DARKEN_4">
				<m:MaterialNavBrand text="HANABI" paddingLeft="20"/>
